package assignment2.question2;

import java.util.Scanner;

public class BookStoreApp {
	
	public static void menu() {
		
	}

	public static void main(String[] args) {
		BookStore bookStore = new BookStore();
		System.out.println("1.Display 2.Order 3.Sell 0.Exit");
		
		Scanner sc = new Scanner(System.in);
		switch(sc.nextInt()) {
		case 1:
			bookStore.display();
			break;
			
		case 2:
			String isbn; int noOfCopies1;
			System.out.println("Enter ISBN no.: ");
			isbn = sc.nextLine();
			System.out.println("Enter no. of copies: ");
			noOfCopies1 = sc.nextInt();
			bookStore.order(isbn, noOfCopies1);
			break;
			
		case 3:
			String title; int noOfCopies2;
			System.out.println("Enter Title of book: ");
			title = sc.nextLine();
			System.out.println("Enter no. of copies: ");
			noOfCopies2 = sc.nextInt();
			bookStore.sell(title, noOfCopies2);
			break;
			
		case 0: 
			break;
			
		default:
			System.out.println("Invalid selection, please try again...");
		}
		
		sc.close();
		
	}

}
